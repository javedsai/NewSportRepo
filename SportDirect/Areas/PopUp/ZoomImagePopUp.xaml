<?xml version="1.0" encoding="UTF-8"?>
<rgPages:PopupPage BackgroundColor="White"  xmlns:local="clr-namespace:SportDirect.Controls" xmlns:rgPages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:rgAnimations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SportDirect.Areas.PopUp.ZoomImagePopUp">
   <rgPages:PopupPage.Animation>
        <rgAnimations:MoveAnimation
            DurationIn="500"
            DurationOut="400"
            PositionIn="Bottom"
            PositionOut="Bottom" />
    </rgPages:PopupPage.Animation>
    <StackLayout Margin="20" VerticalOptions="CenterAndExpand">
        <Label Text="Close" HorizontalOptions="EndAndExpand" VerticalOptions="End"/>
        <local:PinchAndPanImage>
             <local:PinchAndPanImage.Content>
                  <Image x:Name="productImage" />
             </local:PinchAndPanImage.Content>
        </local:PinchAndPanImage>
    </StackLayout>
</rgPages:PopupPage>
